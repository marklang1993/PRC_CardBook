<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cardImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/cardIdTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardImageView"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="@string/label_loading_text"
        android:textColor="@color/black" />

    <com.androidessence.lib.RichTextView
        android:id="@+id/inventoryCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cardImageView"
        android:layout_alignEnd="@+id/cardImageView"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="0dp"
        android:text="@string/label_loading_text"
        android:textAlignment="textEnd"
        android:textSize="14sp"
        android:textStyle="bold" />
</RelativeLayout>